extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet" href="/css/forms.css")

block content
    if errorMessage
        .alert.alert-danger.col-sm-7 !{errorMessage}
    form(action="/login" method="POST")
        input(type="hidden" name="_csrf" value=`${csrfToken}`)
        .form-group.row
            label(for="email").col-sm-2.col-form-label Email
            .col-sm-5.pr-0
                input.form-control#email(type="text" name="email")

        .form-group.row
            label(for="password").col-sm-2.col-form-label Password
            .col-sm-5.pr-0
                input.form-control#password(type="password", name="password")

        .form-group.row
            .col-sm-10.offset-sm-2
                input.btn.btn-primary(type="submit" value="Submit")

        .form-group.row
            .col-sm-10.offset-sm-2
                a(href="/reset-password").btn.btn-link.p-0 Reset Password