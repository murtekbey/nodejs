extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet" href="/css/forms.css")

block content
    form(action="/admin/categories" method="POST")

        input#id(type="hidden" name="id" value=`${category._id}`)

        .form-group.row
            label(for="name").col-sm-2.col-form-label Category Name
            .col-sm-10
                input.form-control#name(type="text" name="name" value=`${category.name}`)
                
        .form-group.row
            label(for="description").col-sm-2.col-form-label Description
            .col-sm-10
                textarea.form-control#description(name="description", cols="30", rows="10") #{category.description}

        .form-group.row
            .col-sm-10.offset-sm-2
                input.btn.btn-primary(type="submit" value="Save Category")