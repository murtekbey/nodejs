extends ../layouts/main-layout.pug

block content

    if orders.length > 0
        each order in orders
            .card.mb-5
                .card-header
                    h3 Order ID: ##{order._id}
                table.table
                    thead
                        tr
                            th Image
                            th Product Name
                            th Quantity
                            th Price
                    tbody
                        each product in order.items
                            tr
                                td
                                    img(src=`/img/${product.imageUrl}` width="80")
                                td #{product.name}
                                td #{product.quantity}
                                td #{product.price} TL
                    tfoot
                        tr
                            td(colspan="2") #{order.date}
                            td
                            - var total = 0;
                            each product in order.items
                                - total += (product.price * product.quantity)
                            td #{total} TL

    else
        h1 No Orders